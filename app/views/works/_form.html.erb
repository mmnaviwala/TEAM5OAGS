

<%= form_for(@work) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="span6 offset3">
	  <div class="field">
		  <p>Artist</p>
		<%= f.collection_select :artist_id, Artist.find(:all), 			:id, :first_name, :prompt => "Please Select" %>  
	  </div>
	  <div class="field">
	    <%= f.label :title %><br />
	    <%= f.text_field :title %>
	  </div>
	  <div class="field">
	    <%= f.label :medium %><br />
	    <%= f.text_field :medium %>
	  </div>
	  <div class="field">
	    <%= f.label :description %><br />
	    <%= f.text_area :description %>
	  </div>
	  <div class="field">
	    <%= f.label :copy %><br />
	    <%= f.text_field :copy %>
	  </div>
	  <div class="field">
	    <%= f.label :date_acquired %><br />
	    <%= f.date_select :date_acquired %>
	  </div>
	  <div class="field">
	    <%= f.label :acquisition_price %><br />
	    <%= f.text_field :acquisition_price %>
	  </div>
	  <div class="field">
	    <%= f.label :asking_price %><br />
	    <%= f.text_field :asking_price %>
	  </div>
	  <div class="field">
	    <%= f.label :date_sold %><br />
	    <%= f.date_select :date_sold %>
	  </div>
	  <div class="field">
	    <%= f.label :img_url %><br />
	    <%= f.url_field :img_url %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Add Work", class: "btn btn-large btn-primary" %>
	  </div>
  </div>
</div>
<% end %>
